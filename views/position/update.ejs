<!DOCTYPE html>
<html lang="en">

<head>
    <% include ../partials/header %>
</head>

<body>
    <% include ../partials/navigation %>
    <div class="container">
        <div class="card-secondary">
            <div class="card-body">
                <center>
                    <h2>Update Position</h2>
                </center>
                <div class="card-text text-center">
                    <form method="post" action="/positions/update/<%= Position._id %>?_method=PUT">
                        <br>
                        <div class="form-group row-md-5">
                            <label class="row-md-4 col-form-label" for="projectName">
                                Project Name
                            </label>
                            <div class="row-md-7">
                                <input type="text" id="projectName" name="projectName" class="form-control"
                                    value="<%= Position.projectName%>" placeholder="Enter Project Name"
                                    required="">
                            </div>
                        </div>

                        <div class="form-group row-md-5">
                            <label class="row-md-4 col-form-label" for="clientName">
                                Client Name
                            </label>
                            <div class="row-md-7">
                                <input type="text" id="clientName" name="clientName" class="form-control"
                                    value="<%= Position.clientName%>" placeholder=" Enter Client Name"
                                    required="">
                            </div>
                        </div>

                        <div class="form-group row-md-5">
                            <label class="row-md-4 col-form-label" for="role">
                                Role
                            </label>
                            <div class="row-md-7">
                                <input type="text" id="role" name="role" class="form-control"
                                    value="<%= Position.role%>" placeholder="Enter Role" required="">
                            </div>
                        </div>

                        <div class="form-group row-md-5">
                            <label class="row-md-4 col-form-label" for="role">
                                Technologies
                            </label>
                            <div class="row-md-7">
                                <input type="text" id="technologies" name="technologies" class="form-control"
                                    value="<%= Position.technologies%>" placeholder="Enter Technologies"
                                    required="">
                            </div>
                        </div>

                        <div class="form-group row-md-5">
                            <label class="row-md-4 col-form-label" for="jobDescription">
                                Job Description
                            </label>
                            <div class="row-md-7">
                                <textarea type="" id="jobDescription" cols="30" rows="5" name="jobDescription"
                                    class="form-control" placeholder="Enter Job Description"
                                    required=""> <%= Position.jobDescription%></textarea>
                            </div>
                        </div>

                        <div class="form-group row-md-5">
                            <label class="row-md-4 col-form-label" for="status">
                                Status
                            </label>
                            <div class="row-md-7">
                                <div class="row radio-inline">
                                    <% if (Position.status) {%>
                                    <label><input type="radio" name="status" value="true" checked>Open</label>
                                    <br>
                                    <label><input type="radio" name="status" value="false">Closed</label>
                                    <% } else { %>
                                    <label><input type="radio" name="status" value="true">Open</label>
                                    <br>
                                    <label><input type="radio" name="status" value="false" checked>Closed</label>
                                    <% } %>
                                </div>
                            </div>
                        </div>

                        <button class="btn btn-sm btn-primary" type="submit">Update Position</button>
                        <br>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
<% include ../partials/footer %>

</html>